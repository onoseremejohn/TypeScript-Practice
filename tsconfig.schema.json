{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TypeScript Compiler Options",
  "type": "object",
  "properties": {
    "compilerOptions": {
      "type": "object",
      "properties": {
        "target": {
          "type": "string",
          "enum": [
            "es3",
            "es5",
            "es6",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "es2021",
            "esnext"
          ]
        },
        "module": {
          "type": "string",
          "enum": [
            "none",
            "commonjs",
            "amd",
            "system",
            "umd",
            "es6",
            "es2015",
            "es2020",
            "esnext"
          ]
        },
        "lib": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "allowJs": {
          "type": "boolean"
        },
        "outDir": {
          "type": "string"
        },
        "rootDir": {
          "type": "string"
        },
        "strict": {
          "type": "boolean"
        },
        "esModuleInterop": {
          "type": "boolean"
        },
        "skipLibCheck": {
          "type": "boolean"
        },
        "forceConsistentCasingInFileNames": {
          "type": "boolean"
        }
      },
      "required": ["target", "module"]
    },
    "exclude": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
